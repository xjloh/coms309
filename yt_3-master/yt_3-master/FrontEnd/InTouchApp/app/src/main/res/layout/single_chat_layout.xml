<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_sky_blue">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_single_image"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_avatar"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/chat_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:layout_toEndOf="@+id/chat_single_image"
        android:text="Display Name"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/chat_single_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_single_name"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/chat_single_image"
        android:text="Display latest message" />


</RelativeLayout>