<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="60dp"
    android:clipToPadding="false"
    android:background="@color/dark_sky_blue">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_chat_bubble"
        android:layout_alignParentLeft="true"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:civ_border_width="1dp"
        android:src="@drawable/ic_avatar"/>

    <TextView
        android:id="@+id/name_chat_bubble"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/avatar_chat_bubble"
        android:layout_alignTop="@+id/avatar_chat_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:textColor="@color/black"
        android:text="Name"/>

    <TextView
        android:id="@+id/message_body_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_chat_bubble"
        android:layout_alignLeft="@+id/name_chat_bubble"
        android:background="@drawable/their_message"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:elevation="2dp"
        android:textSize="18dp"
        android:text="Sample message"/>
</RelativeLayout>